{{ 'shop-by-brands.css' | asset_url | stylesheet_tag }}

{% liquid
  assign id = section.id
  assign padding_top = section.settings['padding_top']
  assign padding_bottom = section.settings['padding_bottom']
  assign header_text = section.settings['header_text']
  assign wrapper = 'shop-by-brands__outer-wrapper-' | append: id
%}

{% capture splide_options %}
{
  "type": "{{ section.settings.slide_type }}",
  "perPage": {{ section.settings.slide_per_page }},
  "pagination": {{ section.settings.pagination }},
  "arrows": {{ section.settings.arrows }},
  "autoplay": {{ section.settings.autoplay }},
  "interval": {{ section.settings.autoplay_interval | times: 1000 }},
  "gap": "1rem",
  "breakpoints": {
    "1024": {
      "perPage": 2
    },
    "640": {
      "perPage": 2,
      "padding": {
        "right": "5%"
      }
    }
  }
}
{% endcapture %}

<div class="shop-by-brands page-width {{ wrapper }}" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <h2 class="shop-by-brands-header">{{ header_text }}</h2>
  <custom-slider class=" splide" data-options='{{ splide_options }}'>
    <div class="splide__track">
      <ul class="splide__list">
        {% for block in section.blocks %}
          <li class="splide__slide brand-card">
            <a href="{{ block.settings.brand_link }}">
              {% render 'responsive-image',
                desktopImage: block.settings.brand_image,
                mobileImage: block.settings.brand_image,
                img_class: 'w-full h-auto'
              %}
            </a>
            {% if block.settings.brand_collection %}
              <div class="collection-container">
                <a href="{{ shop.url }}/collections/{{ block.settings.brand_collection.handle }}">
                  {% render 'responsive-image',
                    desktopImage: block.settings.brand_collection.image.src,
                    mobileImage: block.settings.brand_collection.image.src,
                    img_class: 'collection-img'
                  %}
                </a>
              </div>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
    </div>

</custom-slider>
</div>
{% schema %}
{
  "name": "Shop By Brands",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "header_text",
      "label": "Heading Text",
      "default": "Shop By Brands",
      "info": "Enter the heading text for the Shop By Brands section."
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "select",
      "id": "slide_type",
      "label": "Slider Type",
      "options": [
        {
          "value": "loop",
          "label": "Loop"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ]
    },
    {
      "type": "range",
      "id": "slide_per_page",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Slides Per Page",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Show Pagination",
      "default": false,
      "info": "Enables dots at bottom of slider"
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "label": "Enable Arrows",
      "default": true,
      "info": "Enables arrows button for navigation"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": false,
      "info": "Auto play the slides"
    },
    {
      "type": "range",
      "id": "autoplay_interval",
      "label": "Autoplay Interval",
      "min": 1,
      "max": 10,
      "default": 3,
      "step": 0.5,
      "unit": "sec"
    },
    {
      "type": "header",
      "content": "Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "Top Padding",
      "default": 10,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "step": 1,
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "image_picker",
          "id": "brand_image",
          "label": "Brand Image"
        },
        {
          "type": "url",
          "id": "brand_link",
          "label": "Brand Link"
        },
        {
          "type": "collection",
          "id": "brand_collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop By Brands",
    }
  ]
}
{% endschema %}