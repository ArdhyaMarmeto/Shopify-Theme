
{{ 'shop-by-style-and-shapes.css' | asset_url | stylesheet_tag }}

{% capture splide_options %}
  {
    "type": "{{ section.settings.slide_type }}",
    "perPage": {{ section.settings.slide_per_page }},
    "pagination": {{ section.settings.pagination | json }},
    "arrows": {{ section.settings.arrows | json }},
    "autoplay": {{ section.settings.autoplay | json }},
    "interval": {{ section.settings.autoplay_interval | times: 1000 }},
    "width": "1008px",
    "gap": "3rem",
    "breakpoints": {
        "1120":{
        "perPage": 3
        },
        "749":{
          "perPage": 3,
          "arrows": false,
          "pagination": false
        },
        "375":{
          "perPage": 2,
          "arrows": false,
          "pagination": false
        }
      }
  }
{% endcapture %}

{% style %}
  .shop-by-styles-and-shapes-inner {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media (max-width: 480px) {
    .shop-by-styles-and-shapes-inner {
    padding-top: 10px;
    padding-bottom: 10px;
    }
  }
{% endstyle %}

<div
  class="shop-by-style-and-shapes"
>
  <div class="shop-by-styles-and-shapes-inner">
    <div class="shop-by-styles-and-shapes-inner-heading">{{ section.settings.heading }}</div>
    <div class="shop-by-styles-and-shapes-inner-image">
      {% if section.settings.shop_by_style_desktop_image != blank %}
        {% render 'responsive-image',
          desktopImage: section.settings.shop_by_style_desktop_image,
          mobileImage: section.settings.shop_by_style_mobile_image
        %}
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>

    <!-- Splide slider -->
    <custom-slider
      class="splide"
      data-options="{{ splide_options | escape }}"
    >
      <div class="splide__track">
        <ul class="splide__list">
          {% for block in section.blocks %}
            <li class="splide__slide">
              <a href="{{ block.settings.product_url }}" class="style-shape-card-link">
                <div class="style-shape-card">
                  {% if block.settings.style_and_shape_card_image != blank %}
                    {% render 'responsive-image', desktopImage: block.settings.style_and_shape_card_image %}
                  {% else %}
                    {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {% endif %}
                  <p class="card-title">{{ block.settings.style_and_shape_card_title }}</p>
                </div>
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>
    </custom-slider>
  </div>
</div>

{% schema %}
{
  "name": "Shop by Style",
  "class": "shop-by-style-and-shapes",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "Padding settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "Top Padding",
      "step": 1,
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "Bottom Padding",
      "step": 1,
      "default": 10
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "select",
      "id": "slide_type",
      "label": "Slider type",
      "options": [
        {
          "value": "loop",
          "label": "Loop"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ]
    },
    {
      "type": "range",
      "id": "slide_per_page",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Slide per page",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Show pagination",
      "default": false,
      "info": "Enables dots at bottom of slider"
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "label": "Enable arrows",
      "default": true,
      "info": "Enables arrows button for navigation"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Auto play",
      "default": false,
      "info": "Auto play the slides"
    },
    {
      "type": "range",
      "id": "autoplay_interval",
      "label": "Auto play duration",
      "min": 1,
      "max": 10,
      "default": 3,
      "step": 0.5,
      "unit": "sec"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop By Style & Shapes"
    },
    {
      "type": "image_picker",
      "id": "shop_by_style_desktop_image",
      "label": "Select desktop image"
    },
    {
      "type": "image_picker",
      "id": "shop_by_style_mobile_image",
      "label": "Select mobile image"
    }
  ],
  "blocks": [
    {
      "type": "style-shape-card",
      "name": "Style and Shape Card",
      "settings": [
        {
          "type": "image_picker",
          "id": "style_and_shape_card_image",
          "label": "Card image"
        },
        {
          "type": "text",
          "id": "style_and_shape_card_title",
          "label": "Card title",
        },
        {
          "type": "url",
          "id": "product_url",
          "label": "Product URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop by Style"
    }
  ]
}
{% endschema %}
