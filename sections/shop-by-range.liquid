{{ 'shop-by-range.css' | asset_url | stylesheet_tag }}
{% comment %} <script src="{{ 'shop-by-range.js' | asset_url }}" defer></script> {% endcomment %}

{% liquid
  assign id = section.id
  assign padding_top = section.settings['padding_top']
  assign padding_bottom = section.settings['padding_bottom']
  assign header_text = section.settings['header_text']
  assign wrapper = 'shop-by-range__outer-wrapper-' | append: id
%}

{% capture splide_options %}
{
  "type": "{{ section.settings.slide_type }}",
  "perPage": {{ section.settings.slide_per_page }},
  "pagination": {{ section.settings.pagination | json }},
  "arrows": {{ section.settings.arrows | json }},
  "autoplay": {{ section.settings.autoplay | json }},
  "interval": {{ section.settings.autoplay_interval | times: 1000 }},
  "gap": "1rem",
  "breakpoints": {
    "1024": {
      "perPage": 2
    },
    "640": {
      "perPage": 3,
      "padding": {
        "right": "15%"
      }
    }
  }
}
{% endcapture %}

<div class="shop-by-range page-width {{ wrapper }}" style="padding-top: {{ padding_top }}px; padding-bottom: {{ padding_bottom }}px;">
  <h2 class="shop-by-range-header">{{ header_text }}</h2>

  <div class="slider-container">
    <div class="slider-background"></div>
    <splider-components class=" splide" data-options='{{ splide_options | strip_newlines }}'>
      <div class="splide__track">
        <ul class="splide__list range-slider">
          {% for block in section.blocks %}
            {% assign collection = collections[block.settings.range_collection] %}
            <li class="splide__slide range-slide">
              <a href="{{ collection.url }}">
                {% if collection.image %}
                  {% render 'responsive-image',
                    desktopImage: collection.image | img_url: 'large',
                    mobileImage: collection.image | img_url: 'medium',
                    img_class: 'w-full h-auto'
                  %}
                {% else %}
                  <p>No image available</p>
                {% endif %}
              </a>
            </li>
          {% endfor %}
        </ul></div>
      </splider-components>
    </div>

</div>

{% schema %}
{
  "name": "Shop By Range",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "header_text",
      "label": "Heading Text",
      "default": "Shop By Range",
      "info": "Enter the heading text for the Shop By Range section."
    },
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "select",
      "id": "slide_type",
      "label": "Slider Type",
      "options": [
        {
          "value": "loop",
          "label": "Loop"
        },
        {
          "value": "fade",
          "label": "Fade"
        },
        {
          "value": "slide",
          "label": "Slide"
        }
      ]
    },
    {
      "type": "range",
      "id": "slide_per_page",
      "min": 1,
      "max": 10,
      "step": 1,
      "label": "Slides Per Page",
      "default": 1
    },
    {
      "type": "checkbox",
      "id": "pagination",
      "label": "Show Pagination",
      "default": false,
      "info": "Enables dots at bottom of slider"
    },
    {
      "type": "checkbox",
      "id": "arrows",
      "label": "Enable Arrows",
      "default": true,
      "info": "Enables arrows button for navigation"
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable Autoplay",
      "default": false,
      "info": "Auto play the slides"
    },
    {
      "type": "range",
      "id": "autoplay_interval",
      "label": "Autoplay Interval",
      "min": 1,
      "max": 10,
      "default": 3,
      "step": 0.5,
      "unit": "sec"
    },
    {
      "type": "header",
      "content": "Padding Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "Top Padding",
      "default": 10,
      "step": 1
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "step": 1,
      "min": 0,
      "max": 100,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 10
    }
  ],
  "blocks": [
    {
      "type": "range",
      "name": "Range Slide",
      "settings": [
        {
          "type": "collection",
          "id": "range_collection",
          "label": "Select Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Shop By Range",
      "category": "Custom"
    }
  ]
}
{% endschema %}